<h2>Todos-page</h2>

{{#if todos.length}}
<ul>
    {{#each todos}} <!--перебираем массив todos, если не пустой-->
        <li class="todo">
            <form action="/complete" method="POST">
                <label>
                    {{#if complited}}
                        <input type="checkbox" checked name="completed">
                        <span class="completed">{{title}}</span>
                    {{else}}
                        <input type="checkbox" name="completed">
                        <span>{{title}}</span>                                                 <!--весь перебор заворачиваем в ul-->
                    {{/if}}       

                    <input type="hidden" value="{{_id}}" name="id">      
                                                                
                    <button type="submit" class="btn btn-small">Save</button>
                </label>
            </form>
        </li>
    {{/each}} <!--Закрываем each-->
</ul>
{{else}}
<p>No todos!</p>
{{/if}} <!--Закрываем if-->